FROM --platform=$TARGETPLATFORM golang:1.19.2 as builder

USER root



RUN apt update -y

RUN apt install -y wget gcc unzip
ENV GOPROXY=https://goproxy.cn
ENV GOPATH=/build

WORKDIR /build
RUN wget -O arm64.zip https://github.com/jiuker-middware/mysql-operator/archive/refs/heads/arm64_policyv1.zip
RUN unzip arm64.zip
WORKDIR /build/mysql-operator-arm64_policyv1
RUN go mod tidy
RUN CGO_ENABLED=0 go build  -o /mysql-operator  cmd/mysql-operator/main.go


FROM --platform=$TARGETPLATFORM jiuker/mysql-operator:0.6.2
USER root
COPY --from=builder /mysql-operator /mysql-operator

RUN chmod +x /mysql-operator

